<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlt1"
    android:background="@color/colorPrimary"
    tools:context=".ProfileActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/crd1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="2dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


            <TextView
                android:id="@+id/chat_dsp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/back_btn"
                android:text="Profile"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/crd1">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/crd1"
            android:layout_margin="5dp"
            android:elevation="2dp"
            app:cardCornerRadius="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/bagImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@color/colorAccent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@android:color/holo_green_light"
                            tools:layout_editor_absoluteX="4dp"
                            tools:layout_editor_absoluteY="0dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userImge"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"

                            android:src="@drawable/ic_account_circle_black_24dp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/othr_prf_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="228dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="Displayname"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/othr_prf_display_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="60dp"
                    android:lineSpacingExtra="0dp"
                    android:text="Status"

                    android:textSize="20sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_ProfilePic"

                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="68dp"
                    android:background="@drawable/buttonwhite"
                    android:text="Change Profile Pic"
                    android:textColor="@color/lightprimarycolor"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_Status"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/buttonwhite"
                    android:text="Change status"
                    android:textColor="@color/lightprimarycolor"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bg_imageBTn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="124dp"
                    android:background="@drawable/buttonwhite"
                    android:text="Change Background Image"
                    android:textColor="@color/lightprimarycolor"
                    android:textSize="15sp" />
            </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>