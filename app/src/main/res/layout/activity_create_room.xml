<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoom">

    <EditText
        android:id="@+id/tvpubroomname"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:ems="10"
        android:hint="Room Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary" />

    <Button
        android:id="@+id/btnpubcreate"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Create"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/tvRoomdes"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:maxLength="50"
        android:hint="Room description"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary" />

    <Switch
        android:id="@+id/switchimage"
        android:layout_width="311dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="262dp"
        android:padding="5dp"
        android:text="Images allowed  "
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/audiowide"
        android:text="yuppu"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:text="Create a new room here!"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btngoback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvpubroomname"

        android:layout_below="@+id/btnpubcreate"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="Go Back"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvpubroomname"
        android:layout_below="@+id/tvRoomdes"
        android:text="(Max 50 characters)"
        android:textColor="#D1C4E9"
        android:textSize="12sp" />

</RelativeLayout>